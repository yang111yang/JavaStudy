package com.liu.testorm;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import org.junit.Test;

/**
 * 使用Javabean对象封装一条记录
 * 使用List<JavaBean>封装多条记录
 * @author liujy
 *
 */
public class Demo03 {
	
	/**
	 * 使用Map封装一条记录
	 */
	@Test
	public void test01() {
		Connection conn = JDBCUtils.getMysqlConnection();
		PreparedStatement ps = null;
		ResultSet rs = null;
		Emp emp = null;
		try {
			ps = conn.prepareStatement("select empname,salary,age from emp where id=?");
			ps.setObject(1, 1);
			rs = ps.executeQuery();
			
			while (rs.next()) {
				emp = new Emp(rs.getString(1), rs.getDouble(2), Integer.valueOf(rs.getInt(3)));
			}
		} catch (SQLException e) {
			e.printStackTrace();
		} finally {
			JDBCUtils.close(ps, conn, rs);
		}
		
		System.out.println(emp.getEmpname()+"-->"+emp.getSalary()+"-->"+emp.getAge());
	}
	
	/**
	 * 使用List<Map>封装多条记录
	 */
	@Test
	public void test02() {
		Connection conn = JDBCUtils.getMysqlConnection();
		PreparedStatement ps = null;
		ResultSet rs = null;
		List<Map<String,Object>> list = new ArrayList<Map<String,Object>>();
		try {
			ps = conn.prepareStatement("select empname,salary,age from emp where id>?");
			ps.setObject(1, 1);
			rs = ps.executeQuery();
			
			while (rs.next()) {
				Map<String,Object> row = new HashMap<String, Object>();
				row.put("empname", rs.getObject(1));
				row.put("salary", rs.getObject(2));
				row.put("age", rs.getObject(3));
				list.add(row);
			}
		} catch (SQLException e) {
			e.printStackTrace();
		} finally {
			JDBCUtils.close(ps, conn, rs);
		}
		
		for (Map<String, Object> row : list) {
			for (String key:row.keySet()) {
				System.out.print(key + "-->" + row.get(key)+"\t");
			}
			System.out.println();
		}
	}
	
	/**
	 * 使用List<Map>封装多条记录
	 */
	@Test
	public void test03() {
		Connection conn = JDBCUtils.getMysqlConnection();
		PreparedStatement ps = null;
		ResultSet rs = null;
		Map<String,Map<String,Object>> maps = new HashMap<String,Map<String,Object>>();
		try {
			ps = conn.prepareStatement("select empname,salary,age from emp where id>?");
			ps.setObject(1, 1);
			rs = ps.executeQuery();
			
			while (rs.next()) {
				Map<String,Object> row = new HashMap<String, Object>();
				row.put("empname", rs.getObject(1));
				row.put("salary", rs.getObject(2));
				row.put("age", rs.getObject(3));
				maps.put(rs.getString(1), row);
			}
		} catch (SQLException e) {
			e.printStackTrace();
		} finally {
			JDBCUtils.close(ps, conn, rs);
		}
		
		for (String empname : maps.keySet()) {
			Map<String,Object> row = maps.get(empname);
			for (String key:row.keySet()) {
				System.out.print(key + "-->" + row.get(key)+" ");
			}
			System.out.println();
		}
	}
}
